@model Tbl_StateViewModel

<div class="xs-pd-20-10 pd-ltr-20">   
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @if (Model.state_id < 1)
            {
                <h2 class="h3 mb-0">Add State</h2>
            }
            else
            {
                <h2 class="h3 mb-0">Update State</h2>
            }

            <input type="hidden" id="state_id" value="@Model.state_id" />
        </div>
    </div>
    <div class="row pb-10">
        <div class="col-md-12 mb-10">
            <div class="pd-20 card-box mb-30">
                  <div class="col-md-12 col-sm-12">
                      <div class="form-group">
                          <label>State Name</label>
                      <input type="text" class="form-control form-control-sm" id="state_name" value="@Model.state_name" />
                      </div>
                  </div>
                 <div class="col-md-12 col-sm-12">
                      <div class="form-group">
                          <label>State Code</label>
                          <input type="text" class="form-control form-control-sm" id="state_code" value="@Model.state_code" />
                      </div>
                 </div>
                 <div class="col-md-12 col-sm-12 mt-2">
                     <div class="form-group">
                         <label>Is Active</label>
                         <input type="checkbox" id="status" @Html.Raw(Model.status?"checked":"") />
                     </div>
                 </div>
                 <div class="col-md-4">
                    <input type="button" class="btn btn-sm btn-primary" id="btnSave" value="Submit" />
                 </div>
           
             </div>    
        </div>    
    </div>    
</div>
<!-- Include SweetAlert version 1 from jsDelivr CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert@1"></script>


<script>
    $(document).ready(function () {   
       $('#state_code').on('input', function () {
       
           $(this).val(function (index, value) {
               return value.replace(/[^0-9]/g, '');
           });
       });
       $('#state_name').on('input', function () {
           $(this).val(function (index, value) {
               return value.replace(/[^a-zA-Z]/g, '');
           });
       });
        
    });
   
</script>